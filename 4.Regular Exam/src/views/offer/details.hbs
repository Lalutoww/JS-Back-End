<section id='detailsPage'>
   <div id='detailsInfo'>
      <h1>Name: {{offer.name}}</h1>
      <div class='info'><img src='{{offer.image}}' /></div>

      <div class='info'>
         <h3>Type: {{offer.type}}</h3>
         <h3>Year of Production: {{offer.production}}</h3>
         <h3>Years of Exploitation: {{offer.exploitation}}</h3>
         <h3>
            Damages:
            {{offer.damages}}
         </h3>
         <h3>
            Description:
            {{offer.description}}
         </h3>
         <h2>Price: ${{offer.price}}</h2>
      </div>

      <!--If there is user logged in-->
      {{#if isAuthenticated}}
         <div class='buttons'>
            {{#unless isOwner}}
               <!--If user is not owner of the toy post-->
               {{#unless hasBought}}
                  <a href='/offers/buy/{{offer._id}}' class='buy-btn'>Buy</a>
               {{/unless}}
            {{else}}
               <!--If user is owner-->
               <a href='/offers/edit/{{offer._id}}' class='edit-btn'>Edit</a>
               <a
                  href='/offers/delete/{{offer._id}}'
                  class='delete-btn'
               >Delete</a>
            {{/unless}}

            <!--If user is not the owner and is bought this toy-->
            {{#if hasBought}}
               <p><span class='buy'>Thank You For Your Purchase</span></p>
            {{/if}}
         </div>
      {{/if}}
   </div>
</section>